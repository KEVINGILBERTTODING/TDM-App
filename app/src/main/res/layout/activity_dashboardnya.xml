<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/atasbg"
        android:id="@+id/atasboard"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="125dp"
        android:fontFamily="@font/robotobold"
        android:text="Dashboard"
        android:textColor="@color/black"
        android:textSize="25dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/atasboard"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="63dp"
            android:background="@drawable/kardusjadi"
            android:layout_marginTop="22dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/bg"
            android:padding="20dp"
            android:text="Daftar Barang" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/atasboard"
        android:layout_marginStart="20dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/brgstatus">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="63dp"
            android:background="@drawable/trolijadi"
            android:layout_marginTop="22dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/bg"
            android:padding="20dp"
            android:text="Bulanan" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="@drawable/button_jos"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Daftar Barang"
            android:fontFamily="@font/robotobold"
            android:textSize="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_jos"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Transaksi Bulanan"
            android:fontFamily="@font/robotobold"
            android:textSize="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="800dp"
            android:layout_marginLeft="310dp"
            android:background="@drawable/plus"/>

    </LinearLayout>

</RelativeLayout>